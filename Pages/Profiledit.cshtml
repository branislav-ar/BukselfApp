@page
@using ProjekatSWE.Pages
@model ProfileditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewData["Title"] = "Izmeni profil";
}
@section Styles{
    <link rel="stylesheet" href="Styles/Style.css">
}
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script language="JavaScript" src="Scripts/Script.js" type="text/javascript" ></script>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IZMENI PROFIL | BUKŠELF</title>
    <!-- icon link -->
    <link rel="icon" href="favicon.ico"/>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <!-- custom css file link  -->
    <link rel="stylesheet" href="css/style.css">

</head>
<body>

    <!-- Header starting here! -->
<header>
    <h1 class="heading"><a href="home?username=@Model.Korisnik.Username"><img width="200" src="https://i.imgur.com/ErOW7Ri.png" alt=""></a></h1>
    
    <div id="menu" class="fas fa-bars"></div>

    <nav class="navbar">
        <ul>
            <li><a href="profil?username=@Model.Korisnik.Username">Moj profil</a></li>
            <li><a href="home?username=@Model.Korisnik.Username">Naslovna</a></li>
            <li><a href="feed?username=@Model.Korisnik.Username">NEWS</a></li>
            <li><a href="index?username=@Model.Korisnik.Username">Početna</a></li>
            <li><a href="about?username=@Model.Korisnik.Username">O nama!</a></li>
            <li><a href="uhome">Log out</a></li>
        </ul>
    </nav>
</header>
    <!-- Header ending here! -->

    <!-- Inof deo ending here! -->

    <section class="profile">
    
        <form action="" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
    
            <div class="title"> 
                <h3>IZMENI INFORMACIJE PROFILA</h3>
            </div>
            
                <div class="user-side">

                    <div class="pic_and_button">
                        <div class="user-picEDIT">
                            <img width="200" src=@Model.Korisnik.KPhotoPath alt="">
                        </div>
                        <div class="form-group row">
                
                            <div>
                                <div >
                                    <input asp-for="Photo">
                                </div>
                            </div>
                        </div>
                    </div>
                

                
                
                <div class="user-infoPRIMARY">
                    <div class="user-info">
                        
                         <div class="info-box">
                            <span class="item1">Username</span>
                            <span class="item2">@Model.Korisnik.Username</span>
                        </div>

                        <div class="info-boxEDIT">
                            <span class="item1">Ime</span>
                            <input type="text" name="Korisnik.ime" class="item2EDIT" placeholder="@Model.Korisnik.Ime" >
                        </div>
                        
                        <div class="info-boxEDIT">
                            <span class="item1">Prezime</span>
                            <input type="text" name="Korisnik.Prezime" class="item2EDIT" placeholder="@Model.Korisnik.Prezime" >
                        </div>
                       
                        <div class="info-boxEDIT">
                            <span class="item1">E-mail</span>
                            <input type="email" class="item2EDIT" name="Korisnik.Email" placeholder="@Model.Korisnik.Email" >
                        </div>

                        <div class="info-boxEDIT">
                            <span class="item1">Adresa</span>
                            <input type="text" class="item2EDIT" name="Korisnik.Adresa" placeholder="@Model.Korisnik.Adresa">
                        </div>

                    </div>
                    <div class="user-info">
                        
                        <div class="info-boxEDIT">
                            <span class="item1">Šifra</span>
                            <input type="password" class="item2EDIT" name="Korisnik.Pw" placeholder="Unesite novu šifru..." >
                        </div>

                        <div class="info-boxEDIT">
                            <span class="item1">Potvrda šifre</span>
                            <input type="password" class="item2EDIT" placeholder="Potvrdite novu šifru..." >
                        </div>

                        <div class="info-boxEDIT">
                            <span class="item1">Država</span>

                            <div class="custom_select">
                                <select>
                                    <option value="">Izaberi...</option>
                                    <option value="SRB">SRB</option>
                                    <option value="HR">HR</option>
                                    <option value="CG">CG</option>
                                    <option value="BIH">BIH</option>
                                </select>
                            </div>
                    
                        </div>
            
                        <div class="info-box">
                            <span class="item1">Datum rođenja</span>
                            <input type="date" class="item2EDIT" name="Korisnik.Datum" value="2000-07-22" min="1900-01-01" max="2020-01-01">
                        </div>
            
                        <div class="info-box">
                            <span class="item1">Pol</span>
                            <div class="gender-details">

                                <input type="radio" name="gender" id="polM" >
                                <input type="radio" name="gender" id="polZ" >
                                <input type="radio" name="gender" id="polOther" >
                                
                                <div class="category">
                                    <label for="polM">
                                        <span class="dot one"></span>
                                        <span class="gender">M</span>
                                    </label>
                                    <label for="polZ">
                                        <span class="dot two"></span>
                                        <span class="gender">Ž</span>
                                    </label>
                                    <label for="polOther">
                                        <span class="dot three"></span>
                                        <span class="gender">Drugo</span>
                                    </label>
                                </div>
                                    
                            </div>
                        </div>
                
                    </div>
                </div>
                </div>

                <div class="user-info">
                    <div class="user-info2">

                        <div class="info-box">
                            <span class="item1">Opis</span>
                            <textarea class="item2EDIT_opis" name="Korisnik.POpis" placeholder="@Model.Korisnik.POpis"></textarea>
                        </div>

                    </div>
            </div>
            </div>
        </div>
           
        <!-- Inof deo ending here! -->

        <!-- Ekstra content starting here! -->

        <div class="content">
                   

            <div class="button_partSAVE">
                <input type="submit" value="Sačuvaj izmene!" class="btnEDIT_save">
            </div> 

        </div>

            <!-- Ekstra content ending here! -->
    </form>
    </section>

    <!-- profile section starting here! -->

    <!-- Footer section starting here! -->

    <div class="footer">
        <div class="box-container">
            <div class="box">
                    <a href="about?username=@Model.Korisnik.Username" rel="">Saznaj ko smo mi!</a>
            </div>

            <div class="box">
                <h3>Prečice</h3>
                    <div class="box2">
                        <a href="home?username=@Model.Korisnik.Username" rel="">Naslovna</a>
                        <a href="about?username=@Model.Korisnik.Username" rel="">O nama!</a>
                        <a href="uhome" rel="">Log out</a>                       
                    </div>
            </div>
            
            <div class="box">


                   <div class="socials">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                    </div>
            </div>
        </div>

        <h1 class="credit"> created by <a href="#">TeamBLS</a> | all rights reserved. </h1>
    </div>

    <!-- Footer section ending here! -->

    <!-- jquery cdn link  -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- custom js file link  -->
<script src="js/script.js"></script>

</body>
</html>