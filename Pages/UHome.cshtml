@page
@using ProjekatSWE.Pages
@model UHomeModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Home";
}
@section Styles{
    <link rel="stylesheet" href="Styles/Style.css">
}
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script language="JavaScript" src="Scripts/Script.js" type="text/javascript" ></script>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NASLOVNA | BUKŠELF</title>

    <!-- icon link -->
    <link rel="icon" href="favicon.ico"/>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="css/style.css">

</head>
<body>

    <!-- Header starting here! -->
<header>
    <h1 class="heading"><a href="uhome"><img width="200" src="images/bukšelf_croppedLONG.png" alt=""></a></h1>
    
    <div id="menu" class="fas fa-bars"></div>

    <nav class="navbar">
        <ul>
            <li><a href="login">Log in</a></li>
            <li><a href="uhome">Početna</a></li>
            <li><a href="uindex">Naslovna</a></li>
            <li><a href="uabout">O nama!</a></li>
        </ul>
    </nav>
</header>
    <!-- Header ending here! -->

    <!-- BUKSELF starting here! -->
    <section class="BUKSELF">

        <div class="box-container">
            

            <!-- pretraga starting -->

            <div class="segment-pretraga">

                <div class="naslov-deo">
                    <h3>PRETRAŽI KNJIGE!</h3>
                    <h2>Odaberi žanr.</h2>
                </div>

                <div class="naslov_i_pisac">
                    <form method="GET">
                        <div class="polje_BIG">
                            <input type="text" class="polje" name="searchIme" placeholder="Naslov dela...">
                            <input type="text" class="polje" name="searchPisac" placeholder="Ime pisca...">
                            <button type="submit" class="btn">Pretraga</button>
                        </div>
                    </form>
                </div> 
                
                <div class="zanrovi-deo">
                        <a href="uhomes?zanr=Biografija">Biografija</a>
                        <a href="uhomes?zanr=Decija">Dečije</a>
                        <a href="uhomes?zanr=Drama">Drama</a>
                        <a href="uhomes?zanr=Fantastika">Fantastika</a>
                        <a href="uhomes?zanr=Fikcija">Fikcija</a>
                        <a href="uhomes?zanr=Horor">Horor</a>
                        <a href="uhomes?zanr=Istorija">Istorija</a>
                        <a href="uhomes?zanr=Misterija">Misterija</a>
                        <a href="uhomes?zanr=Romantika">Romantika</a>
                        <a href="uhomes?zanr=Triler">Triler</a>
                        <a href="uhomes?zanr=Umetnost">Umetnost</a>
                </div>
                
            </div>

            <!-- pretraga ending -->

            <!-- knjige starting -->

            @foreach (var v in Model.Knjige)
            {
            <div class="segment-knjige">

                <div class="knjiga-singular">
                    <div class="cover-image">
                        <a href="ubook?id=@v.ID">
                            <img src=@v.BPhotoPath alt="naslovna_slika">
                        </a>
                    </div>

                    <div class="description">

                        <div class="title">
                            <a href="ubook?id=@v.ID">@v.Ime</a>
                        </div>

                        <div class="author">
                            <a href="UPisac?id=@v.ID"><span>@v.Pisac</span></a>
                        </div>
                         <div class="author">
                            <span>@v.Godina</span>
                        </div>

                        <div class="concrete-description">
                        
                            <span>
                            @v.KnjigaOpis
                            </span>
                        </div>
                    
                    </div>


                </div>
            
            <!-- knjige ending -->
    
        </div>
            }

    </section>

    <!-- BUKSELF ending here!-->

    <!-- Footer section starting here! -->

    <div class="footer">
        <div class="box-container">
            <div class="box">
                    <a href="uabout" rel="">Saznaj ko smo mi!</a>
            </div>

            <div class="box">
                <h3>Prečice</h3>
                    <div class="box2">
                        <a href="uindex" rel="">Naslovna</a>
                        <a href="uabout" rel="">O nama!</a>
                        <a href="uhome" rel="">Log out</a>
                    </div>
            </div>
            
            <div class="box">


                   <div class="socials">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                    </div>

                <!-- NEWSLETTER

                <h3>Newsletter</h3>
                <form action="">
                        <div> <input type="email" placeholder="your email..."></div>
                        <div> <input type="submit" class="btnFooter" values="subscribe"></div>
                </form>

                -->
            </div>
        </div>

        <h1 class="credit"> created by <a href="#">TeamBLS</a> | all rights reserved. </h1>
    </div>

    <!-- Footer section ending here! -->

    <!-- jquery cdn link  -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- custom js file link  -->
<script src="js/script.js"></script>

</body>
</html>