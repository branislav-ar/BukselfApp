@page
@using ProjekatSWE.Pages
@model RegisterModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Register";
}
@section Styles{
    <link rel="stylesheet" href="Styles/Style.css">
}
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script language="JavaScript" src="Scripts/Script.js" type="text/javascript" ></script>
}
<!DOCTYPE html>
<html  lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>REGISTRACIJA | BUKŠELF</title>

    <!-- icon link -->
    <link rel="icon" href="favicon.ico"/>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="css/style.css">

</head>
<body>

    <!-- Header starting here! -->
<header>
    <h1 class="heading"><a href="uhome"> <img width="200" src="https://i.imgur.com/ErOW7Ri.png" alt=""></a></h1>
    
    <div id="menu" class="fas fa-bars"></div>

    <nav class="navbar">
        <ul>
            <li><a href="uhome">Početna</a></li>
            <li><a href="uindex">Naslovna</a></li>
            <li><a href="uabout">O nama!</a></li>
        </ul>
    </nav>
</header>
    <!-- Header ending here! -->

    <!-- Register starting here! -->
<section class="register">

    <div class="image">
        <img src="https://i.imgur.com/y8dgsvK.png" alt="">
    </div>

    <form action="" method="post">
        @Html.AntiForgeryToken()
        <div class="Form-title"> 
            <h3>REGISTRACIJA</h3>
        </div>
        
        <input type="text" class="box" name="Korisnik.Ime" placeholder="Ime...">
        <input type="text" class="box" name="Korisnik.Prezime" placeholder="Prezime...">
        <input type="email" class="box" name="Korisnik.Email" placeholder="e-mail...">
        <input type="text" class="box" name="Korisnik.Username" placeholder="username...">
        <input type="password" class="box" name="Korisnik.Pw" placeholder="password...">


        <div class="gender-details">

            <input type="radio" name="gender" value="M" id="polM">
            <input type="radio" name="gender" value="Z" id="polZ">
            <input type="radio" name="gender" value="O" id="polOther">
            
            <div class="category">
                <label for="polM">
                    <span class="dot one"></span>
                    <span class="gender">M</span>
                </label>
                <label for="polZ">
                    <span class="dot two"></span>
                    <span class="gender">Ž</span>
                </label>
                <label for="polOther">
                    <span class="dot three"></span>
                    <span class="gender">Drugo</span>
                </label>
            </div>
        </div>
        
            <a href="login" rel="">Već imaš nalog? Uloguj se!</a>

            <input type="submit" class="btn" value="Registruj se!">
            
        </form>


    <div class="content">

        <div>
            <h3> Kontaktirajte nas!</h3>
        </div>

        <div class="content2">        
            <div class="icons">
                <i class="fas fa-phone"></i> +381/652931399
            </div>
        
            <div class="icons">
                <i class="fas fa-globe"></i> Srbija, Niš 18000
            </div>
        
            <div class="icons">
                <i class="fas fa-envelope-square"></i> contactinfo@bukself.rs
            </div>
        </div>
    </div>

</section>
    
    <!-- Footer section starting here! -->

    <div class="footer">
        <div class="box-container">
            <div class="box">
                    <a href="uabout" rel="">Saznaj ko smo mi!</a>
            </div>

            <div class="box">
                <h3>Prečice</h3>
                    <div class="box2">
                        <a href="uindex" rel="">Naslovna</a>
                        <a href="uabout" rel="">O nama!</a>
                        <a href="uhome" rel="">Log out</a>
                    </div>
            </div>
            
            <div class="box">


                   <div class="socials">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                    </div>
            </div>
        </div>

        <h1 class="credit"> created by <a href="#">TeamBLS</a> | all rights reserved. </h1>
    </div>

    <!-- Footer section ending here! -->

    <!-- jquery cdn link  -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- custom js file link  -->
<script src="js/script.js"></script>

</body>
</html>