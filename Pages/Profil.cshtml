@page
@using ProjekatSWE.Pages
@model ProfilModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Moj Profil";
}
@section Styles{
    <link rel="stylesheet" href="Styles/Style.css">
}
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script language="JavaScript" src="Scripts/Script.js" type="text/javascript" ></script>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PROFIL | BUKŠELF</title>

    <!-- icon link -->
    <link rel="icon" href="favicon.ico"/>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <!-- custom css file link  -->
    <!--<link rel="stylesheet" href="css/style.css"> -->

</head>
<body>

    <!-- Header starting here! -->
<header>
    <h1 class="heading"><a href="home?username=@Model.Korisnik.Username"><img width="200" src="https://i.imgur.com/ErOW7Ri.png" alt=""></a></h1>
    
    <div id="menu" class="fas fa-bars"></div>

    <nav class="navbar">
        <ul>
            <li><a href="profil?username=@Model.Korisnik.Username">Moj profil</a></li>
            <li><a href="home?username=@Model.Korisnik.Username">Naslovna</a></li>
            <li><a href="feed?username=@Model.Korisnik.Username">NEWS</a></li>
            <li><a href="index?username=@Model.Korisnik.Username">Početna</a></li>
            <li><a href="about?username=@Model.Korisnik.Username">O nama!</a></li>
            <li><a href="uhome">Log out</a></li>
        </ul>
    </nav>
</header>
    <!-- Header ending here! -->

    <!-- Inof deo ending here! -->

    <section class="profile">
    
        <form action="" >
    
            <div class="title"> 
                <h3>INFORMACIJE O PROFILU</h3>
            </div>
            
            <div class="user-side">

                <div class="user-pic">
                    <img width="200" src=@Model.Korisnik.KPhotoPath alt="">
                </div>
                
                <div class="user-infoPRIMARY">
                    <div class="user-info">

                        <div class="info-box">
                            <span class="item1">Ime</span>
                            <span class="item2">@Model.Korisnik.Ime</span>
                        </div>
                            
                        <div class="info-box">
                            <span class="item1">Prezime</span>
                            <span class="item2">@Model.Korisnik.Prezime</span>
                        </div>
                        
                        <div class="info-box">
                            <span class="item1">Korisničko ime</span>
                            <span class="item2">@Model.Korisnik.Username</span>
                        </div>
                        
                        <div class="info-box">
                            <span class="item1">E-mail</span>
                            <span class="item2">@Model.Korisnik.Email </span>
                        </div>

                    </div>
                    <div class="user-info">

                        <div class="info-box">
                            <span class="item1">Adresa</span>
                            <span class="item2">@Model.Korisnik.Adresa</span>
                        </div>
            
                        <div class="info-box">
                            <span class="item1">Država</span>
                            <span class="item2">@Model.Korisnik.Drzava</span>
                        </div>
            
                        <div class="info-box">
                            <span class="item1">Datum rođenja</span>
                            <span class="item2">@Model.Korisnik.Datum</span>
                        </div>
            
                        <div class="info-box">
                            <span class="item1">Pol</span>
                            <span class="item2">Pol</span>
                        </div>
                
                    </div>
                </div>

            </div>

            <div class="user-info">
                <div class="user-info2">

                    <div class="info-box">
                        <span class="item1">Opis</span>
                        <span class="item2">@Model.Korisnik.POpis</span>
                    </div>

                </div>
            </div>

        </div>
    </div>
    
        <!-- Inof deo ending here! -->

        <!-- Ekstra content starting here! -->

        <div class="content">
                   
                <ul>
                    <a href="favBook?username=@Model.Korisnik.Username">
                        <li class="icons">
                            <span><i class="far fa-list-alt"></i></span>
                            <h2>LISTA <i>OMILJENE KNJIGE</i></h2>
                        </li>
                    </a>

                    <a href="pratioci?username=@Model.Korisnik.Username">
                        <li class="icons">
                            <span><i class="far fa-address-card"></i></span>
                            <h2>PRATIOCI</h2>
                        </li>
                    </a>
                    @{if (@Model.Korisnik.Username == "admin")
                        {
                             <a href="newbook?username=admin">
                        <li class="icons">
                            <span><i class="fas fa-edit"></i></span>
                            <h2>NOVA KNJIGA</h2>
                        </li>
                    </a>
                            <a href="NovPisac?username=admin">
                        <li class="icons">
                            <span><i class="fas fa-edit"></i></span>
                            <h2>NOVI PISAC</h2>
                        </li>
                    </a>
                        }
                        else{
                                <a href="recenzije?username=@Model.Korisnik.Username">
                                <li class="icons">
                                <span><i class="fas fa-edit"></i></span>
                                <h2>MOJE RECENZIJE</h2>
                                </li>
                                </a>
                        }
                    
                    }
                    <a href="badges?username=@Model.Korisnik.Username">
                        <li class="icons">
                            <span><i class="fas fa-certificate"></i></span>
                            <h2>BEDŽEVI</h2>
                        </li>
                    </a>
                
                    <a href="profiledit?username=@Model.Korisnik.Username">
                        <li class="icons">
                            <span><i class="fas fa-user-edit"></i></span>
                            <h2>IZMENI PROFIL</a></h2>
                        </li>
                    </a>
                </ul>
        </div>

            <!-- Ekstra content ending here! -->
    
    </section>

    <!-- profile section starting here! -->

    <!-- Footer section starting here! -->

    <div class="footer">
        <div class="box-container">
            <div class="box">
                    <a href="about?username=@Model.Korisnik.Username" rel="">Saznaj ko smo mi!</a>
            </div>

            <div class="box">
                <h3>Prečice</h3>
                    <div class="box2">
                        <a href="home?username=@Model.Korisnik.Username" rel="">Naslovna</a>
                        <a href="about?username=@Model.Korisnik.Username" rel="">O nama!</a>
                        <a href="uhome" rel="">Log out</a>                       
                    </div>
            </div>
            
            <div class="box">


                   <div class="socials">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                    </div>
            </div>
        </div>

        <h1 class="credit"> created by <a href="#">TeamBLS</a> | all rights reserved. </h1>
    </div>

    <!-- Footer section ending here! -->

    <!-- jquery cdn link  -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- custom js file link  -->


</body>
</html>