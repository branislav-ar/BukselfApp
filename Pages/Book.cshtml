                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                            }
                            @if(v.Ocena==5)
                            {
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            }
                        </div>
                    </div>

                    <div class="client-comments">
                        <p>
                        @v.Komentar
                        </p>
                    </div>
                
                </div>
                }   
                }
            }
