@page
@using ProjekatSWE.Pages
@model AboutModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "About";
}
@section Styles{
    <link rel="stylesheet" href="Styles/Style.css">
}
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script language="JavaScript" src="Scripts/Script.js" type="text/javascript" ></script>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>O NAMA! | BUKŠELF</title>

    <!-- icon link -->
    <link rel="icon" href="favicon.ico"/>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    
    <!-- Header starting here! -->
<header>
    <h1 class="heading"><a href="home?username=@Model.Korisnik.Username"> <img width="200" src="images/bukšelf_croppedLONG.png" alt="header"></a></h1>

    <div id="menu" class="fas fa-bars"></div>

    <nav class="navbar">
        <ul>
            <li><a href="profil?username=@Model.Korisnik.Username">Moj profil</a></li>
            <li><a href="home?username=@Model.Korisnik.Username">Naslovna</a></li>
            <li><a href="index?username=@Model.Korisnik.Username">O nama!</a></li>
            <li><a href="uhome">Log out</a></li>
        </ul>
    </nav>
</header>

    <!-- Header ending here! -->
    
    <!-- O nama! secrion starting here! -->
    <section class="about">

        <div class="image">
            <img src="~/images/About_usPIC1.png" alt="image2">
        </div>


        <div class="content">
            <h1>Nekoliko reči o nama!</h1>
            <p id="par1">Grupa entuzijasta literature, a istovremeno i rečunarstva kreirao je ovu WEB aplikaciju
                         sa namerom da zbliži ljude i okupi ih na jednom mestu! Sajt knjižare posetićete da 
                         biste kupili knjigu, a Bukšelf da biste odlučili koju da kupite! Ako nam date priliku
                         možemo Vam uzvratiti velikim brojem knjiga i informacija o njima, što zvaničnih to 
                         subjektivnih od strane članova Bukšelfa, a ako načinite još jedan korak dalje dobrodošli
                         ste da postanete deo naše velike porodice! Budite aktivni i zaradite medalje i popuste!
                        
                         <br>Od čitatelja za čitatelje, od recenzenata za recenzente!
                        </p>
            <a href="home?username=@Model.Korisnik.Username"><button class="btn">Saznaj više!</button></a>
        </div>

    </section>

    
    <!-- O nama! section ending here! -->

    <!-- Footer section starting here! -->

    <div class="footer">
        <div class="box-container">
            <div class="box">
                    <a href="about?username=@Model.Korisnik.Username" rel="">Saznaj ko smo mi!</a>
            </div>

            <div class="box">
                <h3>Prečice</h3>
                    <div class="box2">
                        <a href="home?username=@Model.Korisnik.Username" rel="">Naslovna</a>
                        <a href="about?username=@Model.Korisnik.Username" rel="">O nama!</a>
                        <a href="uhome" rel="">Log out</a>                       
                    </div>
            </div>
            
            <div class="box">


                   <div class="socials">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                    </div>
            </div>
        </div>

        <h1 class="credit"> created by <a href="#">TeamBLS</a> | all rights reserved. </h1>
    </div>

    <!-- Footer section ending here! -->

<!-- jquery cdn link  -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

