@page
@using ProjekatSWE.Pages
@model UserBadgesModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Moji bedzevi";
}
@section Styles{
    <link rel="stylesheet" href="Styles/Style.css">
}
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script language="JavaScript" src="Scripts/Script.js" type="text/javascript" ></script>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BEDŽEVI | BUKŠELF</title>

    <!-- icon link -->
    <link rel="icon" href="favicon.ico"/>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="css/style.css">

</head>
<body>

    <!-- Header starting here! -->
<header>
    <h1 class="heading"><a href="home?username=@Model.Korisnik.Username"><img width="200" src="images/bukšelf_croppedLONG.png" alt=""></a></h1>
    
    <div id="menu" class="fas fa-bars"></div>

    <nav class="navbar">
        <ul>
            <li><a href="profil?username=@Model.Korisnik.Username">Moj profil</a></li>
            <li><a href="home?username=@Model.Korisnik.Username">Naslovna</a></li>
            <li><a href="feed?username=@Model.Korisnik.Username">NEWS</a></li>
            <li><a href="index?username=@Model.Korisnik.Username">Početna</a></li>
            <li><a href="about?username=@Model.Korisnik.Username">O nama!</a></li>
            <li><a href="uhome">Log out</a></li>
        </ul>
    </nav>
</header>
    <!-- Header ending here! -->

    <!-- mojeREC starting here! -->
    <section class="mojeRec">

        <form action="">

            <div class="profile-info">

                <div class="slika">
                    <a href="profil?username=@Model.Vlasnik.Username"><img src="images/user-image-2.png" alt="prof_img1"></a>
                </div>
                <div class="ime_korisnicko-ime">
                    <a href="profil?username=@Model.Vlasnik.Username"><h1>@Model.Vlasnik.Ime @Model.Vlasnik.Prezime</h1></a>
                    <a href="profil?username=@Model.Vlasnik.Username"><h3>@Model.Vlasnik.Username</h3></a>
                </div>
            </div>

            <div class="profile-infoISPOD">
                <div class="ime_korisnicko-ime">
                    <h1>BEDŽEVI:</h1>
                </div>
            </div>

            <div class="content">

                <!-- BOX1 -->
                <div class="review-boxBEDZ">
                    
                    <div class="review-box-topBEDZ">
    
                        <div class="info">
    
                            <div class="profile-img">
                                <img src="images/tier1.png" alt="prof_img1">
                            </div>
                            <div class="name-user">
                                <strong>TIER 1</strong>
                                <span>100+ recenzija</span>
                                <span>
                                    @if(@Model.Vlasnik.BrR >= 100)
                                    {
                                        <span>
                                    <div class="locked_unlocked green">
                                        <i class="fas fa-key"></i>
                                    </div>
                                        </span>
                                    }
                                    else{
                                    <div class="locked_unlocked">
                                        <i class="fas fa-lock"></i>
                                    </div>
                                    }
                                </span>
                            </div>
                        </div>

                    </div>
                
                </div>

                <!-- BOX2 -->
                <div class="review-boxBEDZ">
                    
                    <div class="review-box-topBEDZ">
    
                        <div class="info">
    
                            <div class="profile-img">
                                <img src="images/tier2.png" alt="prof_img1">
                            </div>
                            <div class="name-user">
                                <strong>TIER 2</strong>
                                <span>50+ recenzija</span>
                                <span>
                                    @if(@Model.Vlasnik.BrR >= 50)
                                    {
                                        <span>
                                    <div class="locked_unlocked green">
                                        <i class="fas fa-key"></i>
                                    </div>
                                        </span>
                                    }
                                    else{
                                    <div class="locked_unlocked">
                                        <i class="fas fa-lock"></i>
                                    </div>
                                    }
                                </span>
                            </div>
                        </div>

                    </div>
                
                </div>

                <!-- BOX3 -->
                <div class="review-boxBEDZ">
                    
                    <div class="review-box-topBEDZ">
    
                        <div class="info">
    
                            <div class="profile-img">
                                <img src="images/tier3.png" alt="prof_img1">
                            </div>
                            <div class="name-user">
                                <strong>TIER 3</strong>
                                <span>20+ recenzija</span>
                                <span>
                                    @if(@Model.Vlasnik.BrR >= 20)
                                    {
                                        <span>
                                    <div class="locked_unlocked green">
                                        <i class="fas fa-key"></i>
                                    </div>
                                        </span>
                                    }
                                    else{
                                    <div class="locked_unlocked">
                                        <i class="fas fa-lock"></i>
                                    </div>
                                    }
                                </span>
                            </div>
                        </div>

                    </div>
                
                </div>
            

        </form>

    </section>
    <!-- mojeREC ending! -->

    <!-- Footer section starting here! -->

    <div class="footer">
        <div class="box-container">
            <div class="box">
                    <a href="about?username=@Model.Korisnik.Username" rel="">Saznaj ko smo mi!</a>
            </div>

            <div class="box">
                <h3>Prečice</h3>
                    <div class="box2">
                        <a href="home?username=@Model.Korisnik.Username" rel="">Naslovna</a>
                        <a href="about?username=@Model.Korisnik.Username" rel="">O nama!</a>
                        <a href="uhome" rel="">Log out</a>                       
                    </div>
            </div>
            
            <div class="box">


                   <div class="socials">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                    </div>
            </div>
        </div>

        <h1 class="credit"> created by <a href="#">TeamBLS</a> | all rights reserved. </h1>
    </div>

    <!-- Footer section ending here! -->

    <!-- jquery cdn link  -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- custom js file link  -->
<script src="js/script.js"></script>

</body>
</html>